[user]
	name = Philippe Dionne
	email = dionne.phil@gmail.com
[core]
	excludesfile = ~/.global_ignore
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[alias]
	b = branch
	c = commit -m
	ca = commit -a -m
	co = checkout
	p = push
	pr = pull --rebase
	st = status -bs
	plog="log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
[push]
	default = tracking